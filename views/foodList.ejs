<%- include('header') -%>

<div class="content">
  <div class="row mb-3">
      <div class="col-6 col-md-3">
          <a href="/food/new" class="btn btn-danger btn-lg btn-block">Új étel</a>
      </div>
      <div class="col-6 col-md-3">
          <a href="/" class="btn btn-danger btn-lg btn-block">Menü</a>
      </div>
  </div>
  <div class="text-center card mb-3">
    <h1>Ételek</h1>
</div>
  <div class="row">
      <% foods.forEach(function(food) { %>
          <div class="col-12 col-sm-12 col-lg-4 mb-3">
              <div class="card">
                  <div class="row g-0">
                      <div class="col-md-8">
                          <div class="card-body">
                              <h3 class="card-title h3"><%= food.name %></h3>
                              <p class="card-text fs-4"><%= food.description %></p>
                              <p class="card-text fs-4"><%= food.price %> Ft</p>
                              <a href="/food/edit/<%= food._id %>" class="btn btn-danger btn-lg">Módosítás</a>
                              <a href="/food/del/<%= food._id %>" class="btn btn-danger btn-lg">Törlés</a>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
      <% }); %>
  </div>
</div>
<meta name="viewport" content="width=device-width, initial-scale=1">
<%- include('footer') -%>